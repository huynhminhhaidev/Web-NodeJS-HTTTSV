                    <label for="fullname" class="login-label">Nội dung:</label>
                    <textarea name="textnoti" id="text-noti" cols="30" rows="10" class="login-input noti-text" placeholder="Nhập nội dung thông báo..."><%=textnoti%></textarea>
                    <p class="login-mess-error"><%=mess%></p>
                    <button class="login-btn" type="submit" id="button-post-noti">Đăng</button>
                </form>
            </div>
