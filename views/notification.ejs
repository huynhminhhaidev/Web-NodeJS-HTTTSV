        <div class="login-container">
            <div class="noti-form-wrapper">
                <form method="POST" class="noti-form" >
                    <p class="login-title">Đăng thông báo</p>
                    <input type="text" name="faculty" id="notification-faculty" value="<%= faculty %>" hidden>
                    <input type="text" name="idUser" value="<%= idUser %>" hidden>
                    <label for="fullname" class="login-label">Tiêu đề:</label>
